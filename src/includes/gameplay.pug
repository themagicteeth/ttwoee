    #ttw-comment-removal
        +name('TTW Comment Removal Mod (Clumsy, Locks, Sneak)', 'https://drive.google.com/file/d/1NBiMZonFNPvD0yvYarS_eULsIYyghvSH/view?usp=sharing', 'ttw')
